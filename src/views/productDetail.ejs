<!DOCTYPE html>
<html lang="en">
  <!-- Encabezado -->
  <%- include('./partials/head')%>
  <body>
    <!-- Barra de navegacion -->
    <%- include('./partials/header') %>

    <!-- Contenido principal -->
    <main class="detail-main">
      
      <h1 class="game-title"><%=producto.name %></h1>
      <div class="game-container">
        <img src="/images/products/farcry.jpg" alt="juego" class="game-img" />
        <div class="descripcion">
          <div class="tags">
            <div class="tag play">
              <i class="fa-brands fa-playstation"></i>
            </div>
            <div class="tag xbox">
              <i class="fa-brands fa-xbox"></i>
            </div>
            <div class="tag pc">
              <i class="fa-solid fa-desktop"></i>
            </div>
          </div>
          <div class="detalles">
            <h1 class="precio">$<%=producto.precio %></h1>
            <h2 class="oferta"><%=producto.descuento %>%</h2>
            <h3 class="genero">FPS ACCIÃ“N AVENTURA</h3>
            <p class="about-game">
              <%=producto.descripcion %>
            </p>
          </div>
          <div class="buttons">
            <form action="/products/delete/<%=producto.id %>?_method=DELETE" method="post" class="delete-container">
              <button class="delete-btn" type="submit">Borrar</button>
            </form>
            <button class="carrito">
              Agregar al carrito
              <i class="fa-solid fa-cart-shopping"></i>
            </button>
          </div>
        </div>
      </div>
        
    </main>

    <!-- Footer -->
    <%- include('./partials/footer') %>
  </body>
</html>
